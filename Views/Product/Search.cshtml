@{
    ViewData["Title"] = "Search Products";
}

<h4>Search for specific products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessSearch">

            <div class="form-group row">
                <label for="token" class="control-label col-sm-2">Search: </label>
                <input name="token" class="form-control col-sm-10" />
            </div>

            <div class="form-group row">
                <input type="submit" value="Search" class="btn btn-primary col-sm-4" />
            </div>
        </form>
    </div>
</div>

